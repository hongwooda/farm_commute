<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="EditTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">#273043</item>
        <item name="colorControlNormal">#d8d8d8</item>
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/background_custom_ratingbar</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:thumb">@null</item>
    </style>
</resources>