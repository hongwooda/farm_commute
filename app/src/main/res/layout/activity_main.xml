<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <ImageView
                    android:id="@+id/main_goodsaying_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter">


                </ImageView>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/main_goodsaying_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_otf_extra_bold"
                        android:gravity="center"
                        android:text="아이디어 팜이여 영원하라.."
                        android:textColor="#ffffff"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/main_goodsaying_person_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_otf_extra_bold"
                        android:gravity="center"
                        android:text="- Simon -"
                        android:textColor="#ffffff"
                        android:textSize="17dp">

                    </TextView>

                </LinearLayout>



            </RelativeLayout>
            
            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/main_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_otf_bold"
                    android:gravity="center"
                    android:text="7월 7일 ( 화요일 ) "
                    android:textColor="#000000"
                    android:textSize="28dp">

                </TextView>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanum_square_otf_bold"
                    android:text="휴가 "
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

                <CheckBox
                    android:id="@+id/hoilday_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </CheckBox>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/activity_product_detail_review_write_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_radius_stroke_rectangle"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:orientation="horizontal"
                android:padding="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/onwork_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_otf_extra_bold"
                    android:gravity="center"
                    android:text="8 : 00"
                    android:textColor="#000000"
                    android:textSize="30dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_otf_extra_bold"
                    android:gravity="center"
                    android:text=" ~ "
                    android:textColor="#000000"
                    android:textSize="30dp">

                </TextView>

                <TextView
                    android:id="@+id/offwork_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_otf_extra_bold"
                    android:gravity="center"
                    android:text="18 : 00"
                    android:textColor="#000000"
                    android:textSize="30dp">

                </TextView>


            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/onwork_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nanum_square_otf_bold"
                android:includeFontPadding="false"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:stateListAnimator="@null"
                android:text="출근 입력 버튼"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textSize="18dp"
                android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
                app:backgroundTint="#000000"
                app:cornerRadius="12dp"
                app:rippleColor="@null"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/offwork_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nanum_square_otf_bold"
                android:includeFontPadding="false"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:stateListAnimator="@null"
                android:text="퇴근 입력 버튼"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textSize="18dp"
                android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
                app:backgroundTint="#ffffff"
                app:cornerRadius="12dp"
                android:textColor="#000000"
                app:rippleColor="@null"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />







        </LinearLayout>


    </ScrollView>


</layout>